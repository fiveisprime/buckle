<div ng-controller="registerController">
  <form name="registerForm" novalidate ng-submit="submit();" action="/register" method="post" accept-charset="utf-8" class="register-form">

    <div class="grid_4 alpha"></div>

    <div class="inner grid_4">
      <input name="username" value="" placeholder="Username" ng-model="username" required>
      <input name="first" value="" placeholder="First Name" ng-model="first" required>
      <input name="last" value="" placeholder="Last Name" ng-model="last" required>
      <input name="email" value="" placeholder="Email Address" ng-model="email" required>
      <input type="password" name="password" value="" placeholder="Password" ng-model="password" required>
      <p>
        <button type="submit" ng-disabled="registerForm.$invalid">Register</button>
      </p>
    </div>

    <div class="grid_4 omega"></div>

  </form>
</div>

<script src="/js/pages/register.js"></script>
