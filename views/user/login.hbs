<div ng-controller="loginController" class="form-wrap container">
  <div class="row">
    <div class="col-md-3"></div>
    <form role="form" class="col-md-6" name="loginForm" novalidate action="/login" method="post" accept-charset="utf-8">
      <div class="form-group">
        <label for="id">Username or Email</label>
        <input type="text" class="form-control" name="id" placeholder="Username or Email" ng-model="username" required autofocus>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" ng-model="password" placeholder="Password" required>
      </div>

      <button type="submit" class="btn btn-primary" ng-disabled="loginForm.$invalid">Login</button>
    </form>

    <div class="col-md-3"></div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-4"></div>
    <p class="col-md-5">Not a member yet? <a href="/register">Create an account</a>.</p>
    <div class="col-md-3"></div>
  </div>
</div>

<script src="/js/pages/login.js"></script>
