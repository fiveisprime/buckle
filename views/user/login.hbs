<div ng-controller="loginController" class="form-wrap">
  <div class="row">
    <div class="offset-by-six">
      <form role="form" name="loginForm" novalidate action="/login" method="post" accept-charset="utf-8">
        <input type="text" class="form-control" name="id" placeholder="Username or Email" ng-model="username" required autofocus>
        <input type="password" class="form-control" name="password" ng-model="password" placeholder="Password" required>
        <button type="submit" class="width:200px;" ng-disabled="loginForm.$invalid">Login</button>
      </form>
    </div>
    <div class="offset-by-six">
      <p>Not a member yet? <a href="/register">Create an account</a>.</p>
    </div>
  </div>
</div>

<div class="container">
  <hr>
</div>

<script src="/js/pages/login.js"></script>
