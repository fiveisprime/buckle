<div ng-controller="loginController" class="form-wrap container">
  <div class="row">
    <div class="col-md-3"></div>
    
    <form role="form" class="col-md-6" name="loginForm" novalidate action="/register" method="post" accept-charset="utf-8">
      <div class="form-group">
        <label for="id">Username or Email</label>
        <input type="text" class="form-control" name="id" placeholder="Username or Email" ng-model="username" required autofocus>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" ng-model="password" placeholder="Password" required>
      </div>
    
      <button type="submit" class="btn btn-primary" ng-disabled="loginForm.$invalid">Sign Up</button>
    </form>
    
    <div class="col-md-3"></div>
  </div>
</div>

<script src="/js/pages/login.js"></script>
